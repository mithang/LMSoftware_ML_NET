@page
@model SmartDiaryRazor.Pages.EditModel
@{
}
<!--Input form for diary entries-->
<section class="section">
    <div class="row">
        <form class="col s12" method="post">
            <div class="row">
                <div class="input-field col s12">
                    <input type="hidden" asp-for="Entry.EntryID" />
                    <i class="material-icons prefix purple-text">import_contacts</i>
                    <textarea asp-for="Entry.EntryText" class="materialize-textarea"></textarea>
                    <label asp-for="Entry.EntryText"></label>
                    <span asp-validation-for="Entry.EntryText" class="red-text"></span>
                </div>
                <div class="col s12">
                    <button class="btn purple right" type="submit"><i class="material-icons left">update</i>Update</button>
                </div>
            </div>
        </form>
    </div>

</section>
<div class="center">
    <img src="img/update.svg" style="height:250px; width:250px" />
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
